#include <iostream>
#include <string>
#include "Grammar/Grammar.h" 
#include "Control/Control.h" 
#include "Kernel/Kernel.h"
 
using namespace std;
using namespace controle;
using namespace grammar;
//----------------------------------------------------------------------------------------------------------
int main(int argc, char* argv[])
{
  string frase ;
  cout<<"Calculadora de terminal\n"<<endl;
  grammar::Node arvore;
  controle::Core core = new Core();
  while (true)
  {
    try
    {	
	core->disablePrint();
	cin >> frase;
	arvore = Node::Parse(string frase);
	core::ExecuteOp(arvore);
	if(core->ToPrint()){
	cout << ;		
	}	
    }
    catch (controle::ERRO::CORE)
    {
      break;
    }
    catch(controle::ERRO::STRING){

    }
  }
  return 0;
}

